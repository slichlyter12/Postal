{
    "name": "postal",
    "displayName": "Postal",
    "description": "A tool to help visualize code file systems",
    "version": "0.1.3",
    "publisher": "postal-team",
    "engines": {
        "vscode": "^1.9.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "postal",
        "file",
        "map",
        "visual",
        "link",
        "hyperlink",
        "ui",
        "gui",
        "web",
        "hierarchy",
        "visualization",
        "grammar",
        "parser",
        "scanner"
    ],
    "activationEvents": [
        "onCommand:extension.parse",
        "onCommand:extension.error"
    ],
    "icon": "./images/postalLogo.png",
    "main": "./out/src/extension",
    "controllerMain": "./lib/controller",
    "contributes": {
        "commands": [{
                "command": "extension.parse",
                "title": "Postal"
            },
            {
                "command": "extension.error",
                "title": "Error"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Postal Configuration",
            "properties": {
                "Postal.mapType":{
                    "type": "string",
                    "default": "hierachal",
                    "description": "Way that the mapping is done: hierachal, nodal"
                },
                "Postal.physics": {
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not physics are applied to the map."
                },
                "Postal.ignore": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "regex of file you you want to ignore"
                    },
                    "default": [
                            "*.git"
                        ],
                    "description": "An array of regex that you want the map to ignore"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./;",
        "compile": "tsc -watch -p ./",
        "watch": "tsc -watch -p ./", 
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "randexp": "^0.4.4",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "app": "^0.1.0",
        "find": "0.2.7",
        "browser-window": "^0.4.0",
        "child_process": "^1.0.2",
        "file-system": "^2.2.1",
        "open": "0.0.5",
        "vis": "^4.17.0"
    },
    "repository": "https://github.com/slichlyter12/Postal/tree/master/postal",
    "license": "AGPL-3.0"
}